{
  "name": "simplegallery",
  "version": "1.0.2",
  "description": "Simple Modal Gallery",
  "main": "src/gallery.js",
  "exports": {
    ".": {
      "import": "./src/gallery.mjs",
      "require": "./src/gallery.mjs",
      "types": "./src/gallery.d.ts",
      "browser": "./dist/gallery.js"
    }
  },
  "scripts": {
    "clean": "rm -rf .parcel-cache dist",
    "prebuild": "npm run clean",
    "build": "parcel build --target default",
    "watch": "parcel watch --target default",
    "lintjs": "eslint --fix ./src/gallery.mjs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "targets": {
    "default": {
      "source": [
        "./src/gallery.scss",
        "./src/gallery.js"
      ],
      "distDir": "dist"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxshack/simplegallery.git"
  },
  "author": "Mike Horrocks",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxshack/simplegallery/issues"
  },
  "homepage": "https://github.com/foxshack/simplegallery#readme",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@parcel/transformer-sass": "^2.16.4",
    "@stylistic/eslint-plugin": "^3.1.0",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "parcel": "^2.16.4",
    "sass": "^1.83.4"
  }
}
